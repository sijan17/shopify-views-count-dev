generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model ProductView {
  id        Int      @id @default(autoincrement())
  storeId   String
  productId String
  productHandle String
  count     Int      @default(0)
  createdAt DateTime @default(now())
}